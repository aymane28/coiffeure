{% extends 'base.html.twig' %}

{% block title %}RDV détails{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="container mt-4 min-vh-100">
            <!-- Title -->
            <div class="d-flex justify-content-between align-items-lg-center py-3 flex-column flex-lg-row">
                <h2 class="h5 mb-3 mb-lg-0">Complétez votre rendez-vous</h2>

            </div>

            <form method="post"
                  action="{{ path('add_to_cart', {'id': establishment.id, 'slugservicetype': servicetype.slug, 'slugservice': servicetype.service.slug}) }}">
                <!-- Main content -->
                <div class="row">
                    <!-- Right side -->
                    <div class="col-lg-4">
                        <div class="card mb-4">
                            <div class="card-header fw-bolder text-white h6" style="background-color: #FAAA80">
                                Collaborateur
                                <i class="bi bi-person float-end"></i></div>
                            <div class="card-body">
                                <select class="form-select" aria-label="Default select example" name="rdvCollab"
                                        id="firstRequiredField" required>
                                    <option value="" selected disabled>Choix collaborateur</option>
                                    <option value="Aymane">Aymane</option>
                                    <option value="Laure">Laure</option>
                                </select>
                            </div>
                        </div>
                        <div class="card mb-4">
                            <div class="card-header fw-bolder text-white h6" style="background-color: #FAAA80"> </i>
                                Date<i
                                        class="bi bi-calendar4-week float-end"></i></div>
                            <div class="card-body">
                                <div id="carouselExampleControls" class="carousel slide">
                                    <div class="carousel-inner">
                                        {% for chunk in dateOfYear|batch(5) %}
                                            <div class="carousel-item {% if loop.first %}active{% endif %}">
                                                <div class="d-flex flex-column align-items-center">
                                                    {% for date in chunk %}
                                                        <div class="d-grid gap-2 col-6 mx-auto">
                                                            <label class="btn btn-block mb-2"
                                                                   style="background-color: #f5d0bb">
                                                                <input type="radio" name="rdvDate"
                                                                       value="{{ date|date('l d F') }}"
                                                                >
                                                                {{ date|date('l d F')|format_datetime('full', 'none', locale='en')|capitalize }}
                                                            </label>
                                                        </div>
                                                    {% endfor %}
                                                </div>
                                            </div>
                                        {% endfor %}
                                    </div>
                                    <button class="carousel-control-prev" type="button"
                                            data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                                        <span class="carousel-control-prev-icon btn btn-secondary"
                                              aria-hidden="true"></span>
                                        <span class="visually-hidden">Previous</span>
                                    </button>
                                    <button class="carousel-control-next" type="button"
                                            data-bs-target="#carouselExampleControls" data-bs-slide="next">
                                        <span class="carousel-control-next-icon btn btn-secondary"
                                              aria-hidden="true"></span>
                                        <span class="visually-hidden">Next</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <!-- Notification settings -->
                        <div class="card mb-4">
                            <div class="card-header fw-bolder text-white h6" style="background-color: #FAAA80">Horaire
                                <i
                                        class="bi bi-clock float-end"></i></div>
                            <div class="card-body">
                                <div class="row row-cols-xl-3 justify-content-center">
                                    {% for s in timeopen %}
                                        {% for i in 0..22 %}
                                            {% if i >= (s.time) %}
                                                <div class="col-6"> {# Ajoutez la classe col-6 ici pour créer deux colonnes #}
                                                    <label class="btn btn-block mb-2" style="background-color: #f5d0bb">
                                                        <input class="mb-3" type="radio" id="time" name="rdvTime"
                                                               value="{{ i }}h" required>
                                                        <label for="10heure">{{ i }}h</label><br>
                                                    </label>
                                                </div>
                                            {% endif %}
                                        {% endfor %}
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-8">

                        <div class="card mb-4">
                            <div class="card-header fw-bolder text-white h6" style="background-color: #FAAA80">
                                Musique
                                <i class="bi bi-music-note-beamed float-end"></i>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-3">
                                        <!-- Column for the image, occupying 8/12 of the available width on medium and larger screens -->
                                        <img src="{{ asset('img/image_music_logo.jpg') }}"
                                             class="img-fluid rounded-3 shadow-sm w-100 h-100 object-fit-cover object-position-center"
                                             alt="Image">
                                    </div>
                                    <div class="col">
                                        <!-- Column for the text, occupying 4/12 of the available width on medium and larger screens -->
                                        <h6 class="mb-3">Écoutez votre musique préférée lors de votre visite chez cet
                                            établissement</h6>
                                        <div class="row">
                                            <div class="col">
                                                <div class="form-check mb-2">
                                                    <input class="form-check-input" type="radio" name="flexRadioDefault"
                                                           id="flexRadioDefault1" value="1" required>
                                                    <label class="form-check-label d-flex justify-content-between align-items-center" for="flexRadioDefault1">
                                                        <small>Insérer ma playlist</small>
                                                        <i class="bi bi-music-note-list"></i>
                                                    </label>
                                                    <!-- Bloc de saisie de la playlist -->
                                                    <div class="mt-2">
                                                        <small class="fs-6 text-secondary d-none" id="playlistLabel">Ajoutez votre playlist ci-dessous :</small>
                                                        <div class="input-group mb-3 mt-1 d-none" >
                                                            <input type="text" class="form-control" placeholder="Lien playlist"
                                                                   aria-label="Playlist link" aria-describedby="button-addon2">
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-check mb-2">
                                                    <input class="form-check-input" type="radio" name="flexRadioDefault"
                                                           id="flexRadioDefault2" value="2">
                                                    <label class="form-check-label d-flex justify-content-between align-items-center" for="flexRadioDefault2">
                                                        <small>Choisir par défaut XSCAPE de Michael Jackson</small>
                                                        <i class="bi bi-play-fill"></i>
                                                    </label>
                                                </div>
                                                <div class="form-check mb-2">
                                                    <input class="form-check-input" type="radio" name="flexRadioDefault"
                                                           id="flexRadioDefault3" value="3">
                                                    <label class="form-check-label d-flex justify-content-between align-items-center" for="flexRadioDefault3">
                                                        <small>Je n'ai pas de préférence</small>
                                                        <i class="bi bi-music-player-fill"></i>
                                                    </label>
                                                </div>
                                                <div class="form-check">
                                                    <input class="form-check-input" type="radio" name="flexRadioDefault"
                                                           id="flexRadioDefault4" value="4">
                                                    <label class="form-check-label d-flex justify-content-between align-items-center" for="flexRadioDefault4">
                                                        <small>Je ne souhaite pas écouter de la musique</small>
                                                        <i class="bi bi-volume-mute-fill"></i>
                                                    </label>
                                                </div>
                                            </div>


                                            <div class="col-12 mb-3 mt-5 gap-4">
                                                <img src="https://img.freepik.com/icones-gratuites/youtube_318-183441.jpg?w=360" alt="Youtube" width="30" height="30">
                                                <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/1/19/Spotify_logo_without_text.svg/2048px-Spotify_logo_without_text.svg.png" alt="Spotify" width="30" height="30">
                                                <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/5f/Apple_Music_icon.svg/2048px-Apple_Music_icon.svg.png" alt="AppleMusic" width="30" height="30">
                                                <img src="https://boost.latelierdecedric.com/wp-content/uploads/2017/12/deezer-logo-circle.png" alt="Deezer" width="30" height="30">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card mb-4">
                            <div class="card-header fw-bolder text-white h6" style="background-color: #FAAA80">
                                Notification
                                <i class="bi bi-bell-fill float-end"></i></div>
                            <div class="card-body">
                                <ul class="list-group list-group-flush mx-n2">
                                    <li class="list-group-item px-0 d-flex justify-content-between align-items-start">
                                        <div class="ms-2 me-auto">
                                            <h6 class="mb-0">Nouvelles</h6>
                                            <small>Nouveaux services proposés par cet établissement</small>
                                        </div>
                                        <div class="form-check form-switch">
                                            <input class="form-check-input" type="checkbox" role="switch">
                                        </div>
                                    </li>
                                    <li class="list-group-item px-0 d-flex justify-content-between align-items-start">
                                        <div class="ms-2 me-auto">
                                            <h6 class="mb-0">Newsletter</h6>
                                            <small>Rester branché sur l'actualité de cet établissement.</small>
                                        </div>
                                        <div class="form-check form-switch">
                                            <input class="form-check-input" type="checkbox" role="switch"
                                                   checked="">
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </div>

                        <div class="card mb-4">
                            <div class="card-header h6">
                                <div class="row align-items-center">
                                    <div class="col-6">
                                        <h4 class="mb-2 <small>">{{ establishment.name }} </h4>
                                        <div class="mb-2">
                                            <small><i class="bi bi-geo-alt-fill"
                                                      style="color: #FAAA80"></i> {{ establishment.address }}
                                            </small>
                                        </div>

                                        <small class="mb-3"><i class="bi bi-telephone"></i> 07
                                            89 89 25 14
                                        </small>
                                    </div>
                                    <div class="col-6">
                                        <a class="pull-right"><img title="profile image" width="80" height="80"
                                                                   class="rounded-circle p-1"
                                                                   src="https://i.pinimg.com/originals/a9/cd/dd/a9cddd579baa47976d2d60dc180fa86f.jpg"></a>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <h6 class="mb-4"><i class="bi bi-arrow-right-short"></i>
                                        {{ servicetype.name }}</h6>
                                </div>
                                <div class="mb-3">
                                    <h6 class="mb-4"><i class="bi bi-clock-history"></i>
                                        {{ servicetype.time }} min</h6>
                                </div>
                                <div class="mb-4">
                                    <h6><i class="bi bi-cash-stack" style="color: #14860e"></i>
                                        {{ servicetype.price }} {{ 'EUR'|currency_symbol }}</h6>
                                </div>
                                <div class="d-flex justify-content-end gap-3">
                                    <div class="btn-group dropup" role="group">
                                        <button type="button"
                                                class="btn btn-outline-secondary btn-sm btn-icon-text dropdown-toggle"
                                                data-bs-toggle="dropdown" aria-expanded="false">
                                            <i class="bi bi-pencil"></i> Modifier
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li><a class="dropdown-item" href="{{ path('establishments') }}">Etablissement</a>
                                            </li>
                                            <li><a class="dropdown-item"
                                                   href="{{ path('establishment_details', {'slugestablishment': establishment.slug }) }}">
                                                    Service</a></li>
                                        </ul>
                                    </div>
                                    <button class="btn btn-dark" type="submit" onclick="scrollToFirstRequiredField()">
                                        Validez le RDV →
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        function scrollToFirstRequiredField() {
            // Get the first required input field (or any element with the "required" attribute)
            var firstRequiredField = document.getElementById("firstRequiredField");

            // Scroll to the first required field
            firstRequiredField.scrollIntoView({
                behavior: "smooth",
                block: "start"
            });
        }

        const radioButtons = document.querySelectorAll('input[name="flexRadioDefault"]');
        radioButtons.forEach(button => {
            button.addEventListener('change', handleRadioButtonChange);
        });

        // Fonction pour gérer le changement de sélection des boutons radio
        function handleRadioButtonChange(event) {
            const playlistLabel = document.getElementById('playlistLabel');
            const playlistInput = document.querySelector('.input-group');

            // Masquer le bloc de saisie de la playlist
            playlistLabel.classList.add('d-none');
            playlistInput.classList.add('d-none');

            // Vérifier si le premier bouton radio est sélectionné
            const firstRadioButton = document.getElementById('flexRadioDefault1');
            if (firstRadioButton.checked) {
                // Afficher le bloc de saisie de la playlist uniquement pour le premier bouton radio
                playlistLabel.classList.remove('d-none');
                playlistInput.classList.remove('d-none');
            }
        }


    </script>


{% endblock %}







