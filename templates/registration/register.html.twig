{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <section class="login py-5 border-top-1">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-5 col-md-8 align-item-center">
                    <div class="border">
                        {{ form_start(registrationForm) }}
                        <h3 class="p-4" style="background-color: #FAAA80">S'enregistrer'</h3>
                            <fieldset class="p-4">
                                {{ form_row(registrationForm.email) }}
                                {{ form_row(registrationForm.plainPassword, {
                                    label: 'Password'
                                }) }}

                                    {{ form_row(registrationForm.agreeTerms) }}

                                <button type="submit" class="btn font-weight-bold mt-3" style="background-color: #FAAA80">Se connecter</button>
                                <a class="mt-3 d-block text-primary" href="#!">Mot de passe oubli√©?</a>
                                Avez-vous un compte? <a class="mt-3 d-inline-block text-primary" href="{{ path('app_login') }}"> Se connecter</a>
                            </fieldset>
                        {{ form_end(registrationForm) }}
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
