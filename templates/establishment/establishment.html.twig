{% extends 'base.html.twig' %}

{% block title %}Confort Zone | Établissements {% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .card-establishment {
            border: none;
            transition: 0.3s;
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        }

        .card-establishment:hover {
            box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2);
            transform: translate3D(0, -1px, 0) scale(1.03);
        }

        .card-img-top {
            height: 200px;
            object-fit: cover;
        }

        .custom-overlay {
            position: absolute;
            bottom: 0;
            right: 0;
            /*background-color: rgba(0, 0, 0, 0.4);*/
            color: #ffffff;
            padding: 1rem;
            text-align: right;
        }
    </style>

{% endblock %}

{% block body %}
    {% include 'user/_demand-login.html.twig' %}
    <!-- Header-->
    <header class="border-bottom mb-3 main-color-background">
        <div class="container px-4 px-lg-5 my-4">
            <div class="text-center my-4">
                <h2 class="fw-bolder text-white">Découvrez nos établissements</h2>
            </div>
        </div>
    </header>

    <!-- Page content-->
    <div class="container mt-3">
        <!--<div class="row gx-5 justify-content-center">
            <div class="col-lg-6 mb-4">
                <form class="form-inline">
                    <div class="input-group">
                        <input class="form-control form-control" type="search"
                               placeholder="Rechercher un établissement ..." aria-label="Chercher" id="searchInput">
                        <a href="#" class="btn button-take-rdv text-light" style="background-color: #FAAA80" id="searchButton">
                            Recherche
                        </a>
                    </div>
                </form>
            </div>
        </div>-->
        <div class="row">
            <div class="col-lg-3 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="mb-3">Filtres</h5>
                        <div class="d-flex justify-content-between align-items-center">
                            <h7><i class="bi bi-shop"></i> Type d'établissement :</h7>
                            <span id="resetSelectEstablishment" style="cursor: pointer; display: none;">
                                <i class="bi bi-x-circle"></i>
                            </span>
                        </div>
                        <div class="d-flex flex-column align-items-center text-center mt-2 mb-4">
                            <select class="form-select form-select-sm" id="selectEstablishment"
                                    aria-label=".form-select-sm example">
                                <option selected>Choisir type établissement</option>
                                <option value="1">Barbier</option>
                                <option value="2">Massage</option>
                                <option value="3">Soin</option>
                            </select>
                        </div>
                        <hr class="my-2">
                        <div class="d-flex justify-content-between align-items-center">
                            <h7><i class="bi bi-person"></i> Genre :</h7>
                            <span id="resetSelectGender" style="cursor: pointer; display: none;">
                                <i class="bi bi-x-circle"></i>
                            </span>
                        </div>
                        <div class="d-flex flex-column mt-2 mb-3">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" id="selectGenderOption1"
                                       value="option1">
                                <label class="form-check-label fw-bold" for="selectGenderOption1">
                                    <span role="button" class="badge" style="background-color: #204f7a">Homme</span>
                                </label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" id="selectGenderOption2"
                                       value="option2">
                                <label class="form-check-label fw-bold" for="selectGenderOption2">
                                    <span role="button" class="badge" style="background-color: #832c35">Femme</span>
                                </label>
                            </div>
                        </div>
                        <hr class="my-2">
                        <h7><i class="bi bi-clock-history"></i> Ouverture :</h7>
                        <div class="d-flex flex-column mt-2 mb-3">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" id="selectTimeOption1" value="option2">
                                <label class="form-check-label fw-bold" for="selectTimeOption1">
                                    <span role="button" class="badge"
                                          style="background-color: #1cbb7e">Aujourd'hui</span>
                                </label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" id="selectTimeOption2" value="option2">
                                <label class="form-check-label fw-bold" for="selectTimeOption2">
                                    <span role="button" class="badge"
                                          style="background-color: #39a64f">Cette semaine</span>
                                </label>
                            </div>
                        </div>
                        <hr class="my-2">
                        <h7><i class="bi bi-geo-alt"></i> Lieu :</h7>
                        <div class="d-flex flex-column mb-4">
                            <div class="d-flex flex-column align-items-center text-center mt-2">
                                <select class="form-select form-select-sm" aria-label=".form-select-sm example"
                                        id="selectPlace">
                                    <option selected>Choisir le lieu</option>
                                    <option value="1">Paris</option>
                                    <option value="2">Toulouse</option>
                                    <option value="3">Nice</option>
                                </select>
                            </div>
                        </div>
                        <div class="col d-flex justify-content-end">
                            <button class="btn btn-link text-dark btn-sm me-2" type="button" id="resetFilter">
                                <h7>Tout effacer</h7>
                            </button>
                            <a type="submit" class="btn shadow-lg btn-dark text-light text-center text-uppercase"
                               data-bs-toggle="modal" data-bs-target="#exampleModal">
                                Filtrer</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                 aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="exampleModalLabel">Fonctionnalité en cours de dev</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                    </div>
                </div>
            </div>


            <div class="col">
                <div class="row gx-lg-7 row-cols-md-3 row-cols-xl-3">
                    {% for establishment in establishments %}
                        <div class="col-md-3 mb-5">
                            <div class="card card-establishment">
                                <div class="card">
                                    <img class="card-img-top header-img hover-zoom"
                                         src="https://ocdn.eu/images/pulscms/ZDc7MDA_/b794206dde2def36af96abf3475ccacb.jpg"
                                         alt="Barbier">
                                    <div class="p-2 custom-overlay text-white">
                                        <div class="row">
                                            <i class="bi bi-heart-fill like-icon icon-liked-establishment"
                                               data-bs-toggle="modal"
                                                    {% if app.user %}
                                                        data-bs-target=""
                                                    {% else %}
                                                        data-bs-target="#demandLogin"
                                                    {% endif %}
                                            ></i>
                                        </div>
                                    </div>
                                    <!--<div class="card-img-overlay d-flex align-items-end pb-0">
                                        <div class="p-2 d-block custom-overlay text-white">
                                            <i class="bi bi-bookmark"></i>
                                        </div>
                                    </div>-->
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col">
                                            <div class="badge bg-gradient rounded-pill mb-2"
                                                 style="background-color: #c5701b">
                                                {{ establishment.establishmentType.name }}
                                            </div>
                                            <div class="badge bg-gradient rounded-pill mb-2 main-color-background">
                                                <i class="bi bi-music-note-beamed"></i>
                                            </div>
                                        </div>
                                        <div class="d-flex col justify-content-end">
                                            <p id="favori-icon"><small>
                                                    <i class="bi bi-star-fill"></i> 5</small>
                                            </p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            <h6>{{ establishment.name }}</h6>
                                            <p class="text-secondary mb-3"><small>Ouvert aujourd'hui</small></p>
                                            <h6 class="mb-3">
                                                <i class="bi bi-geo-alt-fill main-color"></i>
                                                Paris
                                            </h6>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col d-flex justify-content-end">
                                            <a type="submit"
                                               class="btn shadow-lg btn-dark text-light text-center text-uppercase"
                                               href="{{ path('establishment_details', {'slugestablishment': establishment.slug }) }}">
                                                Choisir →</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>

        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-center col main-color">
                <li class="page-item">
                    <a class="page-link main-color" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                <li class="page-item"><a class="page-link text-dark" href="#">1</a></li>
                <li class="page-item">
                    <a class="page-link main-color" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.getElementById('resetFilter').addEventListener('click', function () {
            document.getElementById('selectEstablishment').selectedIndex = 0;
            document.getElementById('selectPlace').selectedIndex = 0;
        });

        //genre
        const checkboxes = document.querySelectorAll('.form-check-input');
        const resetIcon = document.getElementById('resetFilter');


        resetIcon.addEventListener('click', function () {
            checkboxes.forEach(checkbox => {
                checkbox.checked = false;
            });
        });

    </script>

{% endblock %}
