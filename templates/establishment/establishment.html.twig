{% extends 'base.html.twig' %}

{% block title %}Établissements {% endblock %}

{% block stylesheets %}
    <style>
        .card {
            border: none;
            transition: 0.3s;
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        }

        .card:hover {
            box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2);
        }

        .card-img-top {
            height: 200px;
            object-fit: cover;
        }
    </style>

{% endblock %}

{% block body %}
    <!-- Header-->
    <header class="py-3" style="background-color: #FAAA80">
        <div class="container px-4 px-lg-5 my-5">
            <div class="text-center text-white">
                <h1 class="display-4 fw-bolder">Découvrez nos établissements</h1>
                <p class="lead fw-normal text-white mb-0">Homme / Femme</p>
            </div>
        </div>
    </header>


    <!-- Page content-->
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-lg-5 row-cols-md-3 row-cols-xl-4 justify-content-center">
            {% for establishment in establishments %}
                <div class="col-md-3 mb-5">
                    <div class="card">
                        <img class="card-img-top"
                             src="https://ocdn.eu/images/pulscms/ZDc7MDA_/b794206dde2def36af96abf3475ccacb.jpg"
                             alt="Barbier">
                        <div class="card-body">
                            <h5 class="card-title fw-bold">{{ establishment.name }}</h5>
                            <div class="text-secondary mb-4">Ouvert aujourd'hui</div>
                            <a type="submit" class="btn text-light text-center text-uppercase"
                               style="background-color:#FAAA80"
                               href="{{ path('establishment_details', {'slugestablishment': establishment.slug }) }}">
                                <i class="bi bi-shop"></i>
                                Choisir</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}





