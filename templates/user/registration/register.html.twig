{% extends 'base.html.twig' %}

{% block title %}Confort Zone | S'inscrire{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <section class="vh-auto">
        <div class="container py-5">
            <div class="row d-flex justify-content-center align-items-center">
                <div class="col col-xl-10">
                    <div class="card" style="border-radius: 1rem;">
                        <div class="row g-0">
                            <div class="col-md-4 col-lg-5 d-none d-md-block"
                                 style="background-image: url('https://images.pexels.com/photos/331989/pexels-photo-331989.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1'); border-radius: 1rem 0 0 1rem">
                            </div>
                            <div class="col-md-6 col-lg-7 d-flex align-items-center">
                                <div class="card-body p-4 p-lg-5 text-black">
                                    {{ form_start(registrationForm) }}
                                    <div class="row mb-4">
                                        <div class="col-auto">
                                            <div class="d-flex align-items-center mb-3 pb-1">
                                                <img src={{ asset('img/main_logo.png') }} width="60" height="60">
                                            </div>
                                        </div>

                                        <div class="col d-flex align-items-center">
                                            <h5 class="mb-3 pb-3" style="letter-spacing: 1px;">
                                                S'enregistrer</h5>
                                        </div>
                                    </div>
                                    <div class="row mb-4">
                                        <div class="col-6">
                                            {{ form_row(registrationForm.firstName, {
                                                "label": "Prénom*",
                                                "required": true,
                                                "params": {
                                                    "raw_label": true
                                                },
                                                "label_attr": {
                                                    "class": "mb-2"
                                                }
                                            }) }}
                                        </div>
                                        <div class="col-6">
                                            {{ form_row(registrationForm.lastName, {
                                                "label": "Nom*",
                                                "required": true,
                                                "params": {
                                                    "raw_label": true
                                                },
                                                "label_attr": {
                                                    "class": "mb-2"
                                                }
                                            }) }}
                                        </div>
                                    </div>
                                    <div class="row mb-4">
                                        <div class="col-6">
                                            {{ form_row(registrationForm.email, {
                                                "label": "Adresse e-mail*",
                                                "required": true,
                                                "attr": {
                                                    "placeholder": "aymane@gmail.com",
                                                },
                                                "params": {
                                                    "raw_label": true,
                                                },
                                                "label_attr": {
                                                    "class": "mb-2"
                                                }
                                            }) }}
                                        </div>
                                        <div class="col-6">
                                            {{ form_row(registrationForm.phoneNumber, {
                                                'type': 'text',
                                                'attr': {
                                                    'maxlength': '10'
                                                },
                                                "label": "Téléphone*",
                                                "required": true,
                                                "params": {
                                                    "raw_label": true
                                                },
                                                "label_attr": {
                                                    "class": "mb-2"
                                                }
                                            }) }}
                                        </div>
                                    </div>

                                    <div class="col-6 mb-3">
                                        {{ form_row(registrationForm.plainPassword, {
                                            "label": "Mot de passe*",
                                            "required": true,
                                            "params": {
                                                "raw_label": true
                                            },
                                            "label_attr": {
                                                "class": "mb-2"
                                            }
                                        }) }}
                                    </div>

                                    <div class="mb-3">
                                        {{ form_row(registrationForm.agreeTerms, {
                                            "label": "Accepter notre politique",
                                            "label_attr": {
                                                "class": "mb-2"
                                            }
                                        }) }}
                                    </div>
                                    <div class="mb-4">
                                        {{ form_widget(registrationForm.submit, {
                                            'label': "S'enregistrer",
                                            'submit': "Senregistrer",
                                            "attr": {
                                                "class": "btn btn-dark btn-lg btn-block",
                                            }}) }}
                                    </div>
                                    <p class="mb-0" style="color: #393f81;">Vous avez déjà un compte ?
                                        <a href="{{ path('app_login') }}"
                                           style="color: #393f81;">Se connecter</a></p>
                                    {{ form_end(registrationForm) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>



{% endblock %}
