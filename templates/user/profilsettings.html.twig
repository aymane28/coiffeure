{% extends 'base.html.twig' %}

{% block body %}

    <div class="container mt-5">
        <div class="main-body">
            <div class="row">
                <div class="col-lg-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                <img src="{{ asset('img/profil.png') }}" alt="Admin"
                                     class="rounded-circle p-1" width="110">
                                <div class="mt-3">
                                    <h4>{{ app.user.name }}</h4>
                                    <p class="text-secondary mb-1">Membre depuis: 2021</p>
                                    <p class="text-muted font-size-sm">Adminstrateur</p>
                                    <button class="btn btn-outline-warning">Supprimer compte</button>
                                </div>
                            </div>
                            <hr class="my-4">
                            <div class="row">
                                <div class="col-auto">
                                    <h5 class="d-flex align-items-center mb-3">
                                        Mes établissements : 2</h5>
                                </div>
                                <div class="col">
                                    <i class="bi bi-shop float-right"></i>
                                </div>
                            </div>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                    <h6 class="mb-0 text-danger">
                                        Etablissement-1
                                    </h6>
                                    <button type="button" class="btn btn-outline-danger btn-sm"><i
                                                class="bi bi-eye"></i></button>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                    <h6 class="mb-0 text-danger">
                                        Etablissement-2
                                    </h6>
                                    <button type="button" class="btn btn-outline-danger btn-sm"><i
                                                class="bi bi-eye"></i></button>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="card">
                        <div class="card-body">
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Nom</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input type="text" class="form-control" value={{ app.user.name }}>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Prénom</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input type="text" class="form-control" value="Aymane">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Email</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input type="text" class="form-control" value={{ app.user.email }}>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Téléphone</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input type="text" class="form-control" value="0711111111">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-3"></div>
                                <div class="col-sm-9 text-secondary ">
                                    <button type="button" class="btn btn-primary px-4 float-right" value="Modifier">
                                        <i class="bi bi-pencil-fill"></i> Modifier
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col">
                                            <h5 class="d-flex align-items-center mb-3">
                                                Mes rendez-vous : 2</h5>
                                        </div>
                                        <div class="col">
                                            <i class="bi bi-calendar-week float-right"></i>
                                        </div>
                                    </div>


                                    <div id="accordion">
                                        <div class="card">
                                            <div class="card-header" id="headingThree">
                                                <div class="row justify-content-between">
                                                    <div class="col">
                                                        <button class="btn btn-link collapsed"
                                                                data-bs-toggle="collapse"
                                                                data-bs-target="#soin"
                                                                aria-expanded="false"
                                                                aria-controls="soin">
                                                            <h6>Soin de visage</h6>
                                                        </button>
                                                    </div>
                                                    <div class="col">
                                                        <span class="text-secondary float-right">03/02/2023</span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div id="soin" class="collapse" aria-labelledby="headingThree"
                                                 data-bs-parent="#accordion">
                                                <div class="card-body">
                                                    <div class="card-body">
                                                        <div class="row mb-3">
                                                            <div class="col-sm-3">
                                                                <h6 class="mb-0">Etablissement</h6>
                                                            </div>
                                                            <div class="col-sm-9 text-secondary">
                                                                <h6>Etablissement-3</h6>
                                                            </div>
                                                        </div>
                                                        <div class="row mb-3">
                                                            <div class="col-sm-3">
                                                                <h6 class="mb-0">Tarifs</h6>
                                                            </div>
                                                            <div class="col-sm-9 text-secondary">
                                                                <h6>{{ '38'|format_currency('EUR') }}</h6>
                                                            </div>
                                                        </div>
                                                        <div class="row mb-3">
                                                            <div class="col-sm-3">
                                                                <h6 class="mb-0">Payement</h6>
                                                            </div>
                                                            <div class="col-sm-9 text-secondary">
                                                                <h6>Espèce</h6>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card">
                                            <div class="card-header" id="headingThree">
                                                <div class="row justify-content-between">
                                                    <div class="col">

                                                        <button class="btn btn-link collapsed "
                                                                data-bs-toggle="collapse"
                                                                data-bs-target="#massage"
                                                                aria-expanded="false"
                                                                aria-controls="massage">
                                                            <h6>Massage</h6>
                                                        </button>
                                                    </div>
                                                    <div class="col">
                                                        <span class="text-secondary float-right">24/04/2023</span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div id="massage" class="collapse" aria-labelledby="headingThree"
                                                 data-bs-parent="#accordion">
                                                <div class="card-body">
                                                    <div class="row mb-3">
                                                        <div class="col-sm-3">
                                                            <h6 class="mb-0">Etablissement</h6>
                                                        </div>
                                                        <div class="col-sm-9 text-secondary">
                                                          <h6>Etablissement-1</h6>
                                                        </div>
                                                    </div>
                                                    <div class="row mb-3">
                                                        <div class="col-sm-3">
                                                            <h6 class="mb-0">Tarifs</h6>
                                                        </div>
                                                        <div class="col-sm-9 text-secondary">
                                                            <h6>{{ '49'|format_currency('EUR') }}</h6>
                                                        </div>
                                                    </div>
                                                    <div class="row mb-3">
                                                        <div class="col-sm-3">
                                                            <h6 class="mb-0">Payement</h6>
                                                        </div>
                                                        <div class="col-sm-9 text-secondary">
                                                            <h6>Carte bancaire</h6>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div

{% endblock %}